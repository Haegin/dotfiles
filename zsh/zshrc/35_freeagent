startfa () { foreman start -c $(awk -F: '$1 !~ /tomcat|queue|elasticsearch|memcached/ { printf $1 "=1," }' Procfile) }
gnd () {devkit server grab $1 && devkit deploy -s int && echo "Deployed to $1"}

