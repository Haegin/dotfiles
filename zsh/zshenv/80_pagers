eval `lesspipe 2>/dev/null`
LESS='--no-init --hilite-search --SILENT'
export LESS

export LESSHISTFILE=~/.var/less/history
[[ -d ${LESSHISTFILE%/*} ]] || mkdir -p ${LESSHISTFILE%/*}

# vim:ft=zsh
