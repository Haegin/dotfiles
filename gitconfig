[user]
  name = Harry Mills
  email = harry@haeg.in
[alias]
  co = checkout
  st = status -s
  cm = commit --verbose
  dt = difftool
  lg1 = log --graph --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold white)— %an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative
  lg2 = log --graph --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(bold white)— %an%C(reset)' --abbrev-commit
  lg = !"git lg1"
  lastlog = log -p -n1
  difflog = log -p
  blame = 'blame -w -M -C'
  tf = 'track-feature'
  ctags = !.git/hooks/ctags
  conflicts = diff --name-only --diff-filter=U
  sha = rev-parse --verify HEAD
[core]
  excludesfile = /Users/harry/.gitignore_global
  trustctime = false
[push]
  default = current

[color]
  branch = auto
  diff = auto
  grep = auto
  interactive = auto
  ui = auto
  status = auto
  showbranch = auto
[diff]
  tool = mvimdiff
  algorithm = patience
[difftool "mvimdiff"]
  cmd = mvim -d -f $LOCAL $REMOTE
[difftool]
  prompt = false
[merge]
  ;conflictstyle = diff3
  ff = false
  [branch "master"]
  mergeoptons = --no-ff
  [git-up "bundler"]
  check = true
  [git-up "rebase"]
  arguments = --preserve-merges
  [rerere]
  enabled = true
  [init]
  templatedir = ~/.git_template
[filter "media"]
  clean = git-media-clean %f
  smudge = git-media-smudge %f
